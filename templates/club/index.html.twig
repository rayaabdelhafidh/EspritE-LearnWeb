{% extends 'baseback.html.twig' %}

{% block body %}
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary rounded-top p-4">
                    <div class="row">
<h1>Liste des Clubs</h1>
        <a href="{{ path('app_club_trier') }}" class="btn btn-lg btn-primary btn-lg-square"><i class="bi bi-arrow-up"></i></a>
        
        <div class="section-title">
        <input type="text" id="searchInput" class="form-control" placeholder="Search" oninput="search()">
    </div>
<div style="width: 800px; margin: 0 auto;">
    </div>
    <table class="table">
        <thead>
            <tr>
    <td> Nom Club </td>
    <td> Date Fondation </td>
    <td> Type d Activite </td>
    <td> Description </td>
    <td> Nombre de membres </td>
    <td> Activite  </td>                
    <th>          </th>
    <th>          </th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
    <td> {{club.nomclub|upper}} </td>
    <td>{{ club.datefondation ? club.datefondation|date('Y-m-d') : '' }}</td>
    <td> {{club.typeactivite}} </td>
    <td> {{club.description}} </td>
    <td> {{club.nbmembres}} </td>
    <td>{{ club.active ? 'Active' : 'Inactive' }}</td>
                <td>
                    {{ include('club/_delete_form.html.twig') }}
                </td>
                <td>
                    <a href="{{ path('app_club_edit', {'idclub': club.idclub}) }}"><button type="submit" class="btn btn-primary">Modifier</button></a>
                </td>
                <td>
                <a href="{{ path('app_club_show', {'idclub': club.idclub}) }}"><button type="submit" class="btn btn-primary">Voir</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <script>
        function search() {
            // Retrieve the value of the search input
            let input = document.getElementById("searchInput");
            let filter = input.value.toUpperCase();

            // Retrieve all table rows to filter
            let rows = document.querySelectorAll("tbody tr");

            // Iterate through all rows and hide those that don't match the search term
            rows.forEach(row => {
                let found = false;
                let cells = row.querySelectorAll("td");
                cells.forEach(cell => {
                    let text = cell.textContent || cell.innerText;
                    if (text.toUpperCase().includes(filter)) {
                        found = true;
                    }
                });
                if (found) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }
    </script>
    <a href="{{ path('app_club_new') }}">Ajouter Club</a>
                    </div>
                </div>
            </div>
         
    
{% endblock %}