{% extends "baseback.html.twig" %}
{% block body %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a href="{{ path('app_club_index') }}" class="">
                            <h3 class="text-primary">Ajouter Club</h3>
                        </a>
                    </div>
        <div class="form-group">
            <label class="form-control-label text-danger" for="{{ form.nomclub.vars.id }}">Nom Club</label>
            {{ form_widget(form.nomclub, {'attr': {'class': 'form-control bg-dark border-0', 'autocomplete': 'off','placeholder': 'Inserer le nom du club'}}) }}
            {% if form_errors(form.nomclub)|length > 0  %}
                <div class="error-message">{{ form_errors(form.nomclub) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            <label class="form-control-label text-danger" for="{{ form.datefondation.vars.id }}">Date Fondation</label>
            {{ form_widget(form.datefondation, {'attr': {'class':'form-control bg-dark border-0', 'autocomplete': 'off','placeholder': 'Inserer la date de fondation du club'}}) }}
            {% if form_errors(form.datefondation)|length > 0  %}
                <div class="error-message">{{ form_errors(form.datefondation) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            <label class="form-control-label text-danger" for="{{ form.typeactivite.vars.id }}">Type d activite</label>
            {{ form_widget(form.typeactivite, {'attr': {'class': 'form-control bg-dark border-0', 'autocomplete': 'off','placeholder': 'Inserer le type d activite du club'}}) }}
            {% if form_errors(form.typeactivite)|length > 0  %}
                <div class="error-message">{{ form_errors(form.typeactivite) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            <label class="form-control-label text-danger" for="{{ form.description.vars.id }}">Description</label>
            {{ form_widget(form.description, {'attr': {'class': 'form-control bg-dark border-0', 'autocomplete': 'off','placeholder': 'Inserer la description du club'}}) }}
            {% if form_errors(form.description)|length > 0  %}
                <div class="error-message">{{ form_errors(form.description) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            <label class="form-control-label text-danger" for="{{ form.nbmembres.vars.id }}">Nombre de membres</label>
            {{ form_widget(form.nbmembres, {'attr': {'class': 'form-control bg-dark border-0', 'autocomplete': 'off','placeholder': 'Inserer le nombre de membres du club'}}) }}
            {% if form_errors(form.nbmembres)|length > 0 %}
                <div class="error-message">{{ form_errors(form.nbmembres) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            <label class="form-control-label text-danger" for="{{ form.active.vars.id }}">Active</label>
            {{ form_widget(form.active, {'attr': {'class': 'form-control bg-dark border-0', 'autocomplete': 'off'}}) }}
            {% if form_errors(form.active)|length > 0  %}
                <div class="error-message">{{ form_errors(form.active) }}</div>
            {% endif %}
        

   </div>
                    <!-- Ajoutez d'autres champs de formulaire si nÃ©cessaire -->
                    <div class="text-center mb-0">
                        <button type="submit" class="btn btn-primary py-3 w-100 mb-4">{{ button_label|default('Save') }}</button>
                        <a href="{{ path('app_club_index') }}" class="btn btn-secondary">Annuler</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}