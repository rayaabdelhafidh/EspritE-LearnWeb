{% form_theme form 'bootstrap_4_layout.html.twig' %}

<div style="text-align: center;"> 
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div style="max-width: 700px; margin: 40px auto;"> 
        <div class="form-group" style="margin-right: 20px;">
            <label for="description" class="text-grey" style="font-size: 18px;">Description:</label>
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': 'font-size: 18px; border: 2px solid grey; width: 100%;'}}) }}
               {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}
        </div>
        <div class="form-group"> 
            <label for="matiere" class="text-grey" style="font-size: 18px;">Mati√®re:</label>
            {{ form_widget(form.matiere, {'attr': {'class': 'form-control', 'style': 'font-size: 18px; border: 2px solid grey; width: 100%;'}}) }}
               {{ form_errors(form.matiere, {'attr': {'class': 'text-danger'}}) }}
        </div>
    </div>
    <button class="btn btn-lg" style="border: 2px solid red; width: 200px; background-color: transparent; color: red; border-radius: 10px; margin-bottom: 20px;">{{ button_label|default('Enregistrer') }}</button> 
    {{ form_end(form) }}
</div>

<style>
    .form-group {
        margin-bottom: 20px;
    }
    .text-white {
        color: white; 
    }
</style>
