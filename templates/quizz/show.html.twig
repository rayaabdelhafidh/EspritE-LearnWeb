{% extends 'base.html.twig' %}

{% block title %} {{ quizz.getDescription() }}{% endblock %}

{% block body %}
             
         
    <h1 class="text-center mb-3" style="color: red;">{{ quizz.getDescription() }}</h1>
    
    <h2> </h2>

    <form action="/submit_answers" method="post"> <!-- Assuming a form submission endpoint -->
        {% for question in questions %}
            <div>
               
                <p style="display: inline-block; margin-right: 300px;"> {{ question.getContent() }}</p>
                <p style="display: inline-block;">Score: {{ question.getScore() }}</p>
                
                <ul>
                    {% if question.getOptions() is not empty %}
                        {% for option in question.getOptions() %}
                            <li>
                                <input type="radio" id="{{ option.getOptionId() }}" name="question{{ question.getQuestionId() }}" value="{{ option.getOptionId() }}">
                                <label for="{{ option.getOptionId() }}">{{ option.getOptionContent() }}</label>
                            </li>
                        {% endfor %}
                    {% else %}
                        <li>No options available</li>
                    {% endif %}
                </ul>
            </div>
        {% endfor %}
        <button type="submit" style="border: 2px solid red; width: 400px; background-color: transparent; color: red; border-radius: 10px; margin-bottom: 50px;">Submit</button>
    </form>
 
<div style="display: flex; align-items: center;">
    <a href="{{ path('app_quizz_index') }}" style="margin-right: 10px;">Back to list</a>
    <a href="{{ path('app_quizz_edit', {'quizId': quizz.getQuizId()}) }}"  style="margin-right: 10px; margin-left: 30px;">Edit</a>

    <div style="margin-left: 20px; color: red;">{{ include('quizz/_delete_form.html.twig') }}</div>
</div>
<style>
     a {
    color: red;
    text-decoration: none;
}  </style>

</body>
</html>

{% endblock %}
