{% block title %}Quiz{% endblock %}

{% block body %}

     <div class="section-title" >
     
        <input type="text "  id="searchInput" class="form-control " placeholder="Search" oninput="search()">
    </div>
   <div>
        <a href="{{ path('app_quizz_index', {'sort': 'asc'}) }}">Trier Ascending</a>
        </div>
        <div>
        <a href="{{ path('app_quizz_index', {'sort': 'desc'}) }}">Trier Descending</a>
         </div>
    <a href="{{ path('app_quizz_new') }}" style="float: right; margin-right: 40px;">Create new</a>

     <table class="table" style ="margin-left:10px;">
        <thead>
            <tr>
                
                <th>Description</th>
                <th>Matier</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quizz in quizzs %}
            <tr>
               
                <td>{{ quizz.description }}</td>
                <td>{{ quizz.matiere }}</td>

                <td style="display: flex; align-items: center;">
                    <a href="{{ path('app_quizz_show', {'quizId': quizz.quizId}) }}" style="margin-right: 10px; ">show</a>
                    <a href="{{ path('app_quizz_edit', {'quizId': quizz.quizId}) }}" style="margin-right: 10px; margin-left: 30px;">edit</a>
                    <a href="{{ path('app_question_new', {'quizId': quizz.quizId}) }}" style="margin-left: 30px;">Ajouter Question</a>
                    <div style="margin-left: 20px; color: red;">{{ include('quizz/_delete_form.html.twig', {'quizz': quizz}) }}</div>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
          
    </table>
 
      </div>
         
    
    <div class="pagination justify-content-center">
            {{ knp_pagination_render(quizzs) }}
        </div>
    
    <style>
     a {
    color: red;
    text-decoration: none;
}
     </style>
 <script>
        function search() {
            // Retrieve the value of the search input
            let input = document.getElementById("searchInput");
            let filter = input.value.toUpperCase();

            // Retrieve all table rows to filter
            let rows = document.querySelectorAll("tbody tr");

            // Iterate through all rows and hide those that don't match the search term
            rows.forEach(row => {
                let found = false;
                let cells = row.querySelectorAll("td");
                cells.forEach(cell => {
                    let text = cell.textContent || cell.innerText;
                    if (text.toUpperCase().includes(filter)) {
                        found = true;
                    }
                });
                if (found) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }
    </script>
     <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
