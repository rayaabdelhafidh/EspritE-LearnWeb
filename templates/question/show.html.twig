{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

<div class="card">
        <div class="card-body">
    <form action="/submit_answers" method="post"> <!-- Assuming a form submission endpoint -->
         <div>
          <div class="text-center mb-3">
          <label for="quiz_description">Quiz:</label>
         <p style="display: inline-block; margin-right: 300px; color: red;">{{ question.getQuiz.getDescription() }}</p>
         </div>
            <div>
                
               <p style="display: inline-block; margin-right: 300px;">{{ question.getContent() }}</p>
               <label for="question_score">Score:</label>
                <p style="display: inline-block; margin-right: 300px;">{{ question.getScore() }}</p>
                
            </div>
                   <ul>
                    {% if question.getOptions() is not empty %}
                        {% for option in question.getOptions() %}
                            <li>
                                <input type="radio" id="{{ option.getOptionId() }}" name="question{{ question.getQuestionId() }}" value="{{ option.getOptionId() }}">
                                <label for="{{ option.getOptionId() }}">{{ option.getOptionContent() }}</label>
                            </li>
                        {% endfor %}
                    {% else %}
                        <li>No options available</li>
                    {% endif %}
                </ul>
                </div>
        
    </form>
</div>
</div>
 <div style="display: flex; align-items: center;">
    <a href="{{ path('app_question_index') }}" style="margin-right: 10px;">back to list</a>

    <a href="{{ path('app_question_edit', {'questionid': question.questionid}) }}" style="margin-right: 10px; margin-left: 30px;" >edit</a>
    <div style="margin-left: 20px; color: red;"> {{ include('question/_delete_form.html.twig') }}</div>
</div>
<style>
     a {
    color: red;
    text-decoration: none;
}  </style>
   
{% endblock %}
