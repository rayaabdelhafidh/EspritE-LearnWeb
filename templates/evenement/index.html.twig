{% extends 'baseback.html.twig' %}

{% block body %}

            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary rounded-top p-4">
                    <div class="row">
<h1>Liste des Evenements</h1>
        <a href="{{ path('app_evenement_trier') }}" class="btn btn-lg btn-primary btn-lg-square"><i class="bi bi-arrow-up"></i></a>
 <div class="section-title">
        <input type="text" id="searchInput" class="form-control" placeholder="Search" oninput="search()">
    </div>
    <table class="table">
        <thead>
            <tr>
    <td> Nom Evenement </td>
    <td> Date Evenement </td>
    <td> Lieu Evenement </td>
    <td> Prix Evenement </td>
    <td> Affiche de l Evenement </td>
    <td> Club Responsable  </td>                
    <th>          </th>
    <th>          </th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
    <td> {{evenement.nomevenement|upper}} </td>
    <td>{{ evenement.dateevenement ? evenement.dateevenement|date('Y-m-d') : '' }}</td>
    <td> {{evenement.lieuevenement}} </td>
    <td> {{evenement.prixevenement}} </td>
    {% set imagePath = evenement.afficheevenement | default('path_to_default_image.jpg') %}
    <td><img src="{{ asset(imagePath) }}"alt=" Image" class="img-thumbnail" width="100"></td>
    <td>{{ evenement.club.nomclub}}</td>
                <td>
                    {{ include('evenement/_delete_form.html.twig') }}
                </td>
                <td>
                    <a href="{{ path('app_evenement_edit', {'idevenement': evenement.idevenement}) }}"><button type="submit" class="btn btn-primary">Modifier</button></a>
                </td>
                <td>
                <a href="{{ path('app_evenement_show', {'idevenement': evenement.idevenement}) }}"><button type="submit" class="btn btn-primary">Voir</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <script>
        function search() {
            // Retrieve the value of the search input
            let input = document.getElementById("searchInput");
            let filter = input.value.toUpperCase();

            // Retrieve all table rows to filter
            let rows = document.querySelectorAll("tbody tr");

            // Iterate through all rows and hide those that don't match the search term
            rows.forEach(row => {
                let found = false;
                let cells = row.querySelectorAll("td");
                cells.forEach(cell => {
                    let text = cell.textContent || cell.innerText;
                    if (text.toUpperCase().includes(filter)) {
                        found = true;
                    }
                });
                if (found) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }
    </script>
    <a href="{{ path('app_evenement_new') }}">Ajouter Evenement</a>
                    </div>
                </div>
            </div>
            
{% endblock %}