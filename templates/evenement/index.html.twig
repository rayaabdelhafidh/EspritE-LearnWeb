{% extends 'baseback.html.twig' %}

{% block bodyBack %}
<h1>Liste des Evenements</h1>
    <table class="table">
        <thead>
            <tr>
    <td> Id Evenement </td>
    <td> Nom Evenement </td>
    <td> Date Evenement </td>
    <td> Lieu Evenement </td>
    <td> Prix Evenement </td>
    <td> Affiche de l Evenement </td>
    <td> Club Responsable  </td>                
    <th>          </th>
    <th>          </th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
    <td> {{evenement.idevenement}} </td>
    <td> {{evenement.nomevenement|upper}} </td>
    <td>{{ evenement.dateevenement ? evenement.dateevenement|date('Y-m-d') : '' }}</td>
    <td> {{evenement.lieuevenement}} </td>
    <td> {{evenement.prixevenement}} </td>
    {% set imagePath = evenement.afficheevenement | default('path_to_default_image.jpg') %}
    <td><img src="{{ asset(imagePath) }}"alt=" Image" class="img-thumbnail" width="100"></td>
    <td>{{ evenement.club.nomclub}}</td>
                <td>
                    {{ include('evenement/_delete_form.html.twig') }}
                </td>
                <td>
                    <a href="{{ path('app_evenement_edit', {'idevenement': evenement.idevenement}) }}"><button type="submit" class="btn btn-primary">Modifier</button></a>
                </td>
                <td>
                <a href="{{ path('app_evenement_show', {'idevenement': evenement.idevenement}) }}"><button type="submit" class="btn btn-primary">Voir</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Ajouter Evenement</a>
    
{% endblock %}
