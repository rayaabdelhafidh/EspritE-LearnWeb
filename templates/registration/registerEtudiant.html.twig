{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css"
          href="{{ asset('./Registrationassets/fonts/icomoon/style.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css"
          href="{{ asset('./Registrationassets/css/owl.carousel.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css"
          href="{{ asset('./Registrationassets/css/bootstrap.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('./Registrationassets/vendor/animate/animate.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css"
          href="{{ asset('./Registrationassets/css/style.css') }}">
    <!--===============================================================================================-->
    <!-- Add this line to include reCAPTCHA script -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

{% endblock %}
{% block body %}
    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('./Registrationassets/img/channels4_profile.jpg');"></div>
        <div class="contents order-2 order-md-1">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3 style="margin-top: 10px;"><strong>Esprit</strong><br>create an account</h3><br>
                        {{ form_start(registrationForm,{attr:{novalidate:'novalidate'} }) }}
                        <div class="form-group first">
                            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}} ) }}</div>
                        <div class="form-group last mb-3">
                            {{ form_row(registrationForm.nom , {'attr': {'class': 'form-control'}}) }}</div>
                        <div class="form-group last mb-3">
                            {{ form_row(registrationForm.tel , {'attr': {'class': 'form-control'}}) }}</div>
                       
                        <div class="form-group first">
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Password', 'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        <div class="d-sm-flex mb-5 align-items-center">
                            <label class="control control--checkbox mb-3 mb-sm-0"><span class="caption"></span></label>
                            {{ form_row(registrationForm.agreeTerms) }}
                            <a class="text-light" href="{{ path('app_login') }}">
                                <h6 style="color:#000000;  margin-left: 120px; text-decoration: underline;">Already have
                                    an account ?</h6>
                            </a>
                        </div>
                        <!-- Add reCAPTCHA widget here -->
                        <div class="g-recaptcha" data-sitekey="6LdgqIgpAAAAAD7HQvSgIRZJwhqwUH-MkbgBtMww"></div>
                        
                        <br/>
                        <div class="col-lg-12">
                            <button type="submit-info" class="btn"
                                    style="margin-bottom: 10px; margin-left: 100px; background-color: #720000; color:#ffffff;">
                                Register
                            </button>
                            <br>
                        </div>
                        <br>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}
