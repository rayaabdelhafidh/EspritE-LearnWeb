{% extends 'baseback.html.twig' %}

{% block title %}Les salles{% endblock %}

{% block body %}
    <h1>Salles</h1>

    <form method="GET" action="{{ path('app_salle_index') }}">
        <label for="bloc">Filterer par Bloc: </label>
        <select name="bloc" id="bloc">
            <option value="">Tout</option>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
            <option value="E">E</option>
            <option value="F">F</option>
            <option value="G">G</option>
            <option value="H">H</option>
            <option value="I">I</option>
            <option value="J">J</option>
            <option value="M">M</option>
        </select>

        <label for="etage">Filterer par Etage:</label>
        <select name="etage" id="etage">
            <option value="">Tout</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>

        <button type="submit">Filtrer</button>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Bloc</th>
                <th>Numero Salle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td>{{ salle.bloc }}</td>
                <td>{{ salle.numeroSalle }}</td> 
                <td>
                    <a href="{{ path('app_salle_show', {'salleId': salle.salleId}) }}">show</a>
                    <a href="{{ path('app_salle_edit', {'salleId': salle.salleId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td> <!-- Colspan adjusted to match the number of columns -->
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_salle_new') }}">Create new</a>
{% endblock %}
