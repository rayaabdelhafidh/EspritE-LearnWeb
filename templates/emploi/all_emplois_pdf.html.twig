                         </td>
                </tr>

                <tr>
                    <td>JEUDI</td>
                    {% set matiereG = emploi.emploiMatieres|filter(mat => mat.starttime|date('H:i:s') == '09:00:00' and mat.dayofweek == 'Thursday')|first %}
