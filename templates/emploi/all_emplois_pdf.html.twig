                        {{ emploi.salle is defined ? emploi.salle : '' }}
                         {% endif %}
                         </td>
                    <td class="text-center">PAUSE</td>
                   {% set matiereF = emploi.emploiMatieres|filter(mat => mat.starttime|date('H:i:s') == '13:30:00' and mat.dayofweek == 'Wednesday')|first %}
                        <td>
                         {% if matiereF is not empty %}
                        {{ matiereF.matiere.nomM }}<br>
                        {{ emploi.salle is defined ? emploi.salle : '' }}
