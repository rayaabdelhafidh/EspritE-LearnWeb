                         {% if matiereC is not empty %}
                        {{ matiereC.matiere.nomM }}<br>
                        {{ emploi.salle is defined ? emploi.salle : '' }}
                         {% endif %}
                         </td>
                    <td class="text-center">PAUSE</td>
                   {% set matiereD = emploi.emploiMatieres|filter(mat => mat.starttime|date('H:i:s') == '13:30:00' and mat.dayofweek == 'Tuesday')|first %}
                    <td>
                         {% if matiereD is not empty %}
                        {{ matiereD.matiere.nomM }}<br>
                        {{ emploi.salle is defined ? emploi.salle : '' }}
