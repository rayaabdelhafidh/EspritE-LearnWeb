                         {% endif %}
                         </td>
                    <td class="text-center">PAUSE</td>
                   {% set matiereJ = emploi.emploiMatieres|filter(mat => mat.starttime|date('H:i:s') == '13:30:00' and mat.dayofweek == 'Friday')|first %}
                        <td>
                         {% if matiereJ is not empty %}
                        {{ matiereJ.matiere.nomM }}<br>
                        {{ emploi.salle is defined ? emploi.salle : '' }}
                         {% endif %}
                         </td>
                </tr>
            </tbody>
        </table>
    </div>
        {% endfor %}
</body>
</html>
