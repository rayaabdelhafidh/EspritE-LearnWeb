                        {{ emploi.salle is defined ? emploi.salle : '' }}
                         {% endif %}
                         </td>
                    <td class="text-center">PAUSE</td>
                    {% set matiereH = emploi.emploiMatieres|filter(mat => mat.starttime|date('H:i:s') == '13:30:00' and mat.dayofweek == 'Thursday')|first %}
                       <td>
                         {% if matiereH is not empty %}
