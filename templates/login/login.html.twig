

    {% block stylesheets %}
    
    <!-- Custom styles-path -->
    <link rel="stylesheet" href="{{ asset('./login/css/style.css') }}">

    <!-- Font Awesome kit script -->
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>

    <!-- Google Fonts Open Sans-->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" href="{{ asset('./login/img/html-5.png') }}"> 
        
            
    {% endblock %}

    
    

{% block body %}
<img class="wave" src="{{ asset('./login/img/wave.svg') }}">
<div class="container">
    <div class="img">
        <img src="{{ asset('./login/img/authentication.svg') }}">
    </div>
    <div class="login-container">
        <form action="{{ path('app_login') }}" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            
            <h2>Login</h2>
            
            <div class="input-div one">
                <div class="i">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <h5>Email</h5>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="input" autocomplete="email" required autofocus>
                </div>
            </div>
            <div class="input-div two">
                <div class="i">
                    <i class="fas fa-key"></i>
                </div>
                <div>
                    <h5>Password</h5>
                    <input type="password" name="_password" id="password" class="input" autocomplete="current-password" required>
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <input type="submit" class="btn" value="Login">
            <a class="forgot" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
            <div class="others">
                <hr>
                <p>OU</p>
                <hr>
            </div>
            <div class="account">
                <p>Vous n'avez pas encore de compte?</p>
                <a href="{{ path('app_registerChoices') }}">Registre</a>
            </div>
        </form>
    </div>
</div>



{% endblock %}
{% block javascripts %}
<script type="text/javascript" src="{{ asset('./login/js/main.js') }}"></script>
    

{% endblock %}

	
			      	
		            
		           
	

	

