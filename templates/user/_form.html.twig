

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Styled Form</title>
    <style>
        /* Styles pour le formulaire */
        form {
            margin: 20px;
        }

        /* Styles pour les champs de texte et les zones de texte */
        input[type="text"],
        input[type="email"],
        textarea {
            width: calc(100% - 42px); /* Ajuster la largeur pour inclure la largeur du bouton */
            padding: 10px;
            margin: 5px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        /* Styles pour le bouton */
        .btn {
            background-color: #731010; /* Couleur spécifiée pour le bouton */
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-left: 10px; /* Marge à gauche pour séparer du champ de saisie */
        }

        /* Hover effect pour le bouton */
        .btn:hover {
            background-color: #4d0606; /* Couleur plus foncée au survol */
        }
    </style>
</head>
<body>

{{ form_start(form)  }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

</body>
</html>
